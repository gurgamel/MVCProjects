<!--We expect to receive a viewmodel called CreateViewModel-->
@model IdentityManual.Models.CreateViewModel

@{
    ViewBag.Title = "Create User";
}

<h2>Create User</h2>

<!--Show any validation errors-->
@Html.ValidationSummary(false)


@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>

    <!--Submit button. Submits the above form to the Admin controller Create overload
        which has the HttpPost attribute-->
    <button type="submit" class="btn btn-primary">Create</button>

    <!--Cancel link (<a> tag) looks like a button. Calls the Index method again on the Admin controller-->
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}

